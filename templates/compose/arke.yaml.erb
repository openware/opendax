version: '3.6'

services:
  arke-maker:
    restart: always
    image: "<%= @utils['images']['arke'] %>"
    env_file:
      - ../config/arke.env
    volumes:
      - ../config/arke/strategies.yml:/home/app/config/strategies.yml
    command: bundle exec ./bin/arke start

  arke-etl:
    image: "<%= @utils['images']['arke'] %>"
    env_file:
      - ../config/arke.env
    volumes:
      - ../config/arke/etl.yml:/home/app/config/etl.yml
    command: ./bin/arke etl start
