version: '3.6'

services:
  db:
    restart: always
    image: mysql:5.7
    volumes:
      - db_data:/var/lib/mysql
      - ../config/mysql:/etc/mysql/conf.d
    environment:
      MYSQL_ROOT_PASSWORD: changeme

  influxdb:
    image: influxdb:1.7.8
    restart: always
    volumes:
      - influx_data:/var/lib/influxdb
      - ../config/influxdb/build_candles.sql:/build_candles.sql
      - ../config/influxdb/influxdb.sql:/influxdb.sql
      - ../config/arke/historical_data:/data/historical_data
    environment:
       INFLUXDB_ADMIN_ENABLED: "true"

  redis:
    image: redis:4.0.10
    restart: always
    volumes:
      - redis_data:/data

  rabbitmq:
    image: rabbitmq:3.7.6-management
    restart: always
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    labels:
      traefik.enable: true
      traefik.frontend.rule: 'Host: rabbitmq.<%= @config['app']['domain'] %>'
      traefik.port: 15672

  vault:
    image: vault:0.10.2
    restart: always
    volumes:
      - vault_data:/vault
    environment:
      SKIP_SETCAP: 1
      VAULT_TOKEN: changeme
      VAULT_DEV_ROOT_TOKEN_ID: changeme
      VAULT_ADDR: http://vault:8200

volumes:
  db_data:
  rabbitmq_data:
  redis_data:
  vault_data:
  influx_data:
