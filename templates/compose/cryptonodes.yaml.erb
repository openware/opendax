version: '3.6'

services:
  parity:
    image: parity/parity:v2.7.2-stable
    restart: always
    command: |
      --mode=active
      --chain=<%= @config['parity']['network'] %>
      --min-peers=<%= @config['parity']['minPeers'] %>
      --max-peers=<%= @config['parity']['maxPeers'] %>
    volumes:
      - ../config/cryptonodes/parity/config.toml:/home/parity/.local/share/io.parity.ethereum/config.toml
      - <%= @config['parity']['volumePath'] -%>:/home/parity/.local/share/io.parity.ethereum
    ports:
      - "127.0.0.1:8545:8545"

  bitcoind:
    image: quay.io/openware/bitcoind:0.19.1
    restart: always
    user: root
    command: bitcoind
    volumes:
      - <%= @config['bitcoind']['volumePath'] -%>:/bitcoin
      - ../config/bitcoin.conf:/bitcoin/.bitcoin/bitcoin.conf

  litecoind:
    image: quay.io/openware/litecoind:0.16.3
    restart: always
    volumes:
      - <%= @config['litecoind']['volumePath'] -%>:/litecoin
      - ../config/litecoin.conf:/litecoin/litecoin.conf

  ardor:
    image: quay.io/openware/ardor:2.2.3
    restart: always
    volumes:
      - <%= @config['ardor']['volumePath'] -%>:/ardor/db/
      - ../config/ardor.conf:/ardor/conf/nxt.properties
