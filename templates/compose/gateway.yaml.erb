version: '3.6'

services:
  gateway:
    image: envoyproxy/envoy:v1.9.0
    depends_on:
      - barong
    volumes:
      - ../config/gateway:/etc/envoy/
    ports:
      - '10000:80'
    command: /usr/local/bin/envoy --v2-config-only -l info -c /etc/envoy/envoy.json
    labels:
      traefik.enable: true
      traefik.frontend.rule: "PathPrefix:/api/, /admin, /assets/;Host:www.<%= @config['app']['domain'] %>"
      traefik.default.port: 80
      traefik.default.protocol: http
      traefik.wss.frontend.rule: "Host:www.<%= @config['app']['domain'] %>"
      traefik.wss.protocol: ws
      traefik.wss.port: 80
