version: '3.6'

services:
  proxy:
    image: traefik:1.7.6
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - ../config/traefik.toml:/etc/traefik/traefik.toml:ro
      - ../config/acme.json:/acme.json
    labels:
      traefik.enable: true
      traefik.frontend.rule: 'Host: monitor.<%= @config['app']['domain'] %>'
      traefik.port: 8080
